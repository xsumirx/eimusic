<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgViewThumbnailItem"
        android:layout_width="120dp"
        android:layout_height="90dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <TextView
            android:id="@+id/txtViewTitleItem"
            android:textColor="#000"
            android:textSize="15sp"
            android:text="Hello"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtViewArtistItem"
            android:textColor="#000"
            android:textSize="10sp"
            android:text="Adele"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtViewDurationItem"
                android:textColor="#000"
                android:textSize="8sp"
                android:text="3 min 40 sec "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="#000"
                android:textSize="8sp"
                android:text="  |   "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/txtViewSizeItem"
                android:textColor="#000"
                android:textSize="8sp"
                android:text="Size : 4MB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
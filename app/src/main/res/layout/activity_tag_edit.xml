<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.elexidea.eimusic.TagEDIT">


    <LinearLayout
        android:id="@+id/tagEditor_container1"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:background="@color/colorPrimaryDark"
                android:src="@drawable/ic_arrow_back_24dp"
                android:layout_width="48dp"
                android:layout_height="48dp" />
        </LinearLayout>


        <TextView
            android:textColor="@color/cpb_white"
            android:layout_weight="1"
            android:text="Tag Editor"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="48dp" />

        <LinearLayout
            android:gravity="right"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:background="@color/colorPrimaryDark"
                android:src="@drawable/ic_save_24dp"
                android:layout_width="48dp"
                android:layout_height="48dp" />
        </LinearLayout>

    </LinearLayout>


    <ScrollView
        android:layout_below="@id/tagEditor_container1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="200dp">


                <ImageView
                    android:src="@drawable/heathens_album_art"
                    android:layout_width="200dp"
                    android:layout_height="200dp" />

                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <Button
                        android:layout_marginTop="5dp"
                        android:textColor="@color/cpb_white"
                        android:background="@color/colorPrimaryDark"
                        android:text="Gallery"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <Button
                        android:layout_marginTop="5dp"
                        android:textColor="@color/cpb_white"
                        android:background="@color/colorPrimaryDark"
                        android:text="ITUNES"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <Button
                        android:layout_marginTop="5dp"
                        android:textColor="@color/cpb_white"
                        android:background="@color/colorPrimaryDark"
                        android:text="iTunes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <CheckBox
                        android:layout_marginTop="5dp"
                        android:text="Remove Art"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/colorPrimaryDark"
                    android:text="Song title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <EditText
                    android:hint="title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginTop="10dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="Artist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <EditText
                    android:hint="artist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />



                <TextView
                    android:layout_marginTop="10dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="Album"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <EditText
                    android:hint="album"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>




        </LinearLayout>

    </ScrollView>
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="#E0F2F1"
    android:elevation="15dp">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.github.lzyzsd.circleprogress.DonutProgress
            android:layout_margin="10dp"
            android:id="@+id/donut_progress"
            android:layout_width="80dp"
            android:layout_height="80dp"
            custom:donut_progress="30"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:maxLines="1"
            android:layout_marginTop="10dp"
            android:textColor="#000"
            android:textSize="15sp"
            android:text="Hello-Karmin,mp3"
            android:id="@+id/txtViewitemDownloadingListFileName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:textSize="12sp"
                android:textColor="#000"
                android:text="25 MB"
                android:id="@+id/txtViewitemDownloadingListFileSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="20sp"
                android:textColor="#000"
                android:text=" | "
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:text="15 MB"
                android:textSize="12sp"
                android:textColor="#000"
                android:id="@+id/txtViewitemDownloadingListProgress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <TextView
            android:textColor="#000"
            android:text="Downloading"
            android:id="@+id/txtViewitemDownloadingListStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>




</LinearLayout>
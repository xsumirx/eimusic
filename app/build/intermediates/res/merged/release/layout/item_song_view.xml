<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:elevation="5dp"
    android:layout_margin="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/imgViewThumbnailItem"
        android:layout_margin="5dp"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:src="@drawable/loadingsymbol"
        app:civ_border_width="0dp"
        app:civ_border_color="@color/colorPrimaryDark"/>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <TextView
            android:maxLines="2"
            android:id="@+id/txtViewTitleItem"
            android:textColor="#000"
            android:textSize="15sp"
            android:text="Hello"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtViewArtistItem"
            android:textColor="#000"
            android:textSize="10sp"
            android:text="Adele"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtViewDurationItem"
                android:textColor="#000"
                android:textSize="8sp"
                android:text="3 min 40 sec "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="#000"
                android:textSize="8sp"
                android:text="  |   "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/txtViewSizeItem"
                android:textColor="#000"
                android:textSize="8sp"
                android:text="Size : 4MB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>